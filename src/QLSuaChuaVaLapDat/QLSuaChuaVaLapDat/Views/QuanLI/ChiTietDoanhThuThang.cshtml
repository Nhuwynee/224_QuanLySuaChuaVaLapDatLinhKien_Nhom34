@model QLSuaChuaVaLapDat.Models.ChiTietThangViewModel

@{
    Layout = "~/Views/Shared/_LayoutQuanLi.cshtml";
}
<div class="container details-container fade-in">
    <Identity />
    <h2 class="details-title">Chi tiết Doanh thu cho @Model.ThangVaNam</h2> 

    @if (Model.ThongTinkh != null && Model.ThongTinkh.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Tên Khách Hàng</th>
                        <th class="text-right">Tổng Tiêu (VND)</th> 
                    </tr>
                </thead>
                <tbody>
                    @foreach (var khachHang in Model.ThongTinkh)
                    {
                        <tr>
                            <td>@khachHang.Ten</td>
                            <td class="text-right">@khachHang.SoLuongTieu.ToString("N0")</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td><strong>Tổng cộng</strong></td>
                        <td class="text-right"><strong>@Model.ThongTinkh.Sum(kh => kh.SoLuongTieu).ToString("N0") VND</strong></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <p class="text-muted no-data-message">Không có dữ liệu chi tiết doanh thu cho tháng này.</p> 
    }

    <div class="mt-4 details-page-actions">
        <a asp-action="thongKe" asp-controller="QuanLI" class="btn btn-return">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left-circle-fill" viewBox="0 0 16 16" style="margin-right: 8px;">
                <path d="M8 0a8 8 0 1 0 0 16A8 8 0 0 0 8 0m3.5 7.5a.5.5 0 0 1 0 1H5.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L5.707 7.5z" />
            </svg>
            Quay lại Thống kê
        </a>
    </div>
</div>